# =============================================================================
# Omniverse Geckos - Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control
# =============================================================================

# =============================================================================
# Next.js & App Configuration
# =============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-nextauth-secret-key-here-min-32-chars

# App Configuration
NEXT_PUBLIC_APP_NAME=Omniverse Geckos
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL (Primary Database)
DATABASE_URL="postgresql://username:password@localhost:5432/omniverse_geckos?schema=public"
DIRECT_URL="postgresql://username:password@localhost:5432/omniverse_geckos?schema=public"

# Redis (Caching & Sessions)
REDIS_URL="redis://localhost:6379"
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# =============================================================================
# Blockchain Configuration
# =============================================================================
# Ethereum Network
NEXT_PUBLIC_CHAIN_ID=1
NEXT_PUBLIC_CHAIN_NAME=mainnet
NEXT_PUBLIC_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Development/Testnet
# NEXT_PUBLIC_CHAIN_ID=11155111
# NEXT_PUBLIC_CHAIN_NAME=sepolia
# NEXT_PUBLIC_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Alchemy (Recommended)
ALCHEMY_API_KEY=your-alchemy-api-key
NEXT_PUBLIC_ALCHEMY_ID=your-alchemy-id

# Infura (Alternative)
INFURA_PROJECT_ID=your-infura-project-id
INFURA_PROJECT_SECRET=your-infura-project-secret

# WalletConnect
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# Contract Addresses (Update after deployment)
NEXT_PUBLIC_GECKO_TOKEN_ADDRESS=0x...
NEXT_PUBLIC_GECKO_NFT_ADDRESS=0x...
NEXT_PUBLIC_MARKETPLACE_ADDRESS=0x...
NEXT_PUBLIC_STAKING_ADDRESS=0x...

# Private Keys (NEVER share these)
DEPLOYER_PRIVATE_KEY=0x...
TREASURY_PRIVATE_KEY=0x...

# =============================================================================
# AI/ML Services - Required for AI Features
# =============================================================================
# OpenAI (GPT-4, DALL-E, Whisper)
OPENAI_API_KEY=sk-your-openai-api-key
NEXT_PUBLIC_OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=org-your-organization-id

# Anthropic Claude (Claude-3, Claude-3.5)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
NEXT_PUBLIC_ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Hugging Face (Open Source Models)
HUGGINGFACE_API_TOKEN=hf_your-hugging-face-token
NEXT_PUBLIC_HUGGINGFACE_API_KEY=hf_your-hugging-face-token

# Vector Database - Pinecone (for AI embeddings)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=omniverse-geckos-vectors
PINECONE_ENVIRONMENT=your-pinecone-environment

# Alternative Vector DB - Weaviate
WEAVIATE_URL=https://your-weaviate-cluster.weaviate.network
WEAVIATE_API_KEY=your-weaviate-api-key

# =============================================================================
# Game Server Configuration
# =============================================================================
GAME_SERVER_PORT=8080
GAME_SERVER_HOST=localhost
WEBSOCKET_PORT=8081

# Game Configuration
GAME_MAX_PLAYERS=1000
GAME_TICK_RATE=60
GAME_PHYSICS_ENABLED=true

# =============================================================================
# IPFS & File Storage
# =============================================================================
# Pinata (IPFS)
PINATA_JWT=eyJ...your-pinata-jwt
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_API_KEY=your-pinata-secret

# IPFS Gateway
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your-token

# AWS S3 (Alternative)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=omniverse-geckos-assets
AWS_REGION=us-east-1

# =============================================================================
# Payment & Crypto Services
# =============================================================================
# Stripe (Fiat Payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Coinbase Commerce (Crypto Payments)
COINBASE_COMMERCE_API_KEY=your-coinbase-commerce-api-key
COINBASE_COMMERCE_WEBHOOK_SECRET=your-coinbase-webhook-secret

# =============================================================================
# Authentication Providers
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Twitter/X OAuth
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# =============================================================================
# Email Services
# =============================================================================
# Resend (Recommended)
RESEND_API_KEY=re_your-resend-api-key
RESEND_FROM_EMAIL=noreply@omniversegeckos.com

# SendGrid (Alternative)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@omniversegeckos.com

# =============================================================================
# Monitoring & Analytics
# =============================================================================
# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=omniverse-geckos
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# PostHog (Analytics)
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Vercel Analytics
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# =============================================================================
# Real-time Services
# =============================================================================
# Pusher (WebSocket alternative)
NEXT_PUBLIC_PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_APP_ID=your-pusher-app-id
PUSHER_CLUSTER=your-pusher-cluster

# Ably (Alternative)
ABLY_API_KEY=your-ably-api-key

# =============================================================================
# External APIs
# =============================================================================
# CoinGecko (Crypto prices)
COINGECKO_API_KEY=CG-your-coingecko-api-key

# Chainlink (Price feeds)
CHAINLINK_API_KEY=your-chainlink-api-key

# Moralis (NFT data)
MORALIS_API_KEY=your-moralis-api-key

# =============================================================================
# Security & Rate Limiting
# =============================================================================
# Rate Limiting
UPSTASH_RATELIMIT_TOKEN=your-upstash-ratelimit-token

# CORS Origins (Production)
CORS_ORIGINS=https://omniversegeckos.com,https://app.omniversegeckos.com

# JWT Secrets
JWT_ACCESS_SECRET=your-jwt-access-secret-min-64-chars
JWT_REFRESH_SECRET=your-jwt-refresh-secret-min-64-chars

# =============================================================================
# Development & Testing
# =============================================================================
# Development Mode
NODE_ENV=development
DEVELOPMENT=true

# Test Configuration
TEST_DATABASE_URL="postgresql://test:test@localhost:5432/omniverse_geckos_test?schema=public"
TEST_PRIVATE_KEY=0x...test-private-key

# Debug Settings
DEBUG=omniverse:*
LOG_LEVEL=debug

# =============================================================================
# Third Party Integrations
# =============================================================================
# GitHub (for contributions & issues)
GITHUB_TOKEN=ghp_your-github-token

# Discord Bot (for community)
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_GUILD_ID=your-discord-guild-id

# =============================================================================
# Advanced Configuration
# =============================================================================
# Feature Flags
FEATURE_NFT_BREEDING=true
FEATURE_3D_GRAPHICS=true
FEATURE_AI_OPPONENTS=true
FEATURE_CROSS_CHAIN=false

# AI Feature Flags
ENABLE_AI_ASSISTANT=true
ENABLE_AI_NFT_GENERATION=true
ENABLE_AI_PERSONALIZATION=true
ENABLE_AI_GAME_ANALYSIS=true
ENABLE_AI_MARKET_INSIGHTS=true
ENABLE_AI_BREEDING_PREDICTIONS=true

# Performance
MAX_CONCURRENT_GAMES=100
GAME_SESSION_TIMEOUT=1800
API_RATE_LIMIT=100

# Security
ENCRYPTION_KEY=your-32-char-encryption-key-here
SESSION_SECRET=your-session-secret-key-here